<!-- views/fruits/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= fruit.name %></title>
    <!-- Dynamic title based on fruit name -->
  </head>
  <body>
    <a href="/fruits/">Back to Fruits</a>
    <h1><%= fruit.name %></h1>
    <!-- Display fruit name -->
    <% if (fruit.isReadyToEat) { %>
    <p>This Fruit is ready to eat!</p>
    <% } else { %>
    <p>This fruit not ready to eat!</p>
    <% } %>
    <form action="/fruits/<%=fruit._id%>?_method=DELETE" method="POST">
      <button type="submit">Delete <%= fruit.name %></button>
    </form>
    <!-- add edit page link here -->
    <a href="/fruits/<%= fruit._id %>/edit">Edit <%= fruit.name %></a>
    <a href="/fruits">Back to Fruits</a>
  </body>
</html>
